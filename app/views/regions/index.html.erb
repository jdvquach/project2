<!--- Search part ---------->

<div class="serachContainer">
    <h1 class="text" class="searchItem">PLACES TO VISIT IN NSW</h1>
  <form class="form-inline" class="searchform">
      <%= form_tag search_attractions_path do %>
      <div class="searchItem">
      <input type="text" class="form-control"  placeholder="Search">
    <!-- </div> -->
    <button type="submit" class="btn btn-info">Search</button>
  </div>

    <% end %>
  </form>

</div>

<!--- region part ---------->



<div class="regionContainer">
  <% @regions.each do |region| %>
    <div class="image">
    <%= cl_image_tag region.image, class:"regionImage"%>
    <div class="imageNameBox">
    <%= link_to region.name, region_path(region.id) %>
    </div>
    </div>
  <% end %>
</div>
