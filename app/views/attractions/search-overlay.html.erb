<h2>Search results for "<%= @query %>"</h2>


<% if @attractions.length===0 %>
  Sorry, there are no results for "<%= @query %>"

<% else %>

  <% @attractions.each do |attraction| %>
  <div class="card bg-dark text-white searchResultsImage">
    <img class="card-img " src="<%= attraction.image %>" alt="Card image">
    <div class="card-img-overlay">
      <h5 class="card-title searchResultsCardTitle"><%= attraction.name %></h5>
    </div>
</div>
  <% end %>
<% end %>
