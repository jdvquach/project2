<%= form_for @attraction, html: {multipart: true} do |f| %>

<fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </fieldset>
  <fieldset>
    <%= f.label :latitude %>
    <%= f.text_field :lat %>
  </fieldset>
  <fieldset>
    <%= f.label :longitude %>
    <%= f.text_field :long %>
  </fieldset>

    <fieldset>
      <%= f.label :region_id, 'Region' %>  <!--drop down selection-->
      <%= f.collection_select :region_id, Region.all, :id, :name, prompt: 'Please choose a region'  %>
    </fieldset>




  <fieldset>
    <%= f.label :image, 'Image URL' %>
    <%= f.text_field :image %>            <!--cloudinary change -->
  </fieldset>
  <%= f.submit %>


<% end %>
